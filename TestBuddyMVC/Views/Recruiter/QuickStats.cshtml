
@{
    ViewBag.Title = "QuickStats";
    Layout = "~/Views/Shared/_PaperLayout.cshtml";
}

<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/quickstats.js"></script>

<!--Performance-->

<div class="jumbotron">
    <h1>Check for the student performance</h1>
    <p>This is a simple dashboard unit,for quickly assessing the students performance over a period of time and able to contact them with a click.</p>
    <p><a class="btn btn-primary btn-lg">Get Started.</a></p>
</div>



<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Select a test</h3>
    </div>
    <div class="panel-body">
        <br/>
        <select style="text-align:center" class="form-control" id="SelectTest">
            <option>loading...</option>
        </select>
        <div class="alert alert-dismissible alert-warning" id="alert" hidden>
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <h4>Try Again!</h4>
            <p>Your Result Not Found</p>
        </div>
        <p><p><p></p>
        <button class="btn btn-primary btn-lg" id="submit">Submit</button>
    </div>
</div>
<!--Performance-->
<div class="jumbotron-fluid">

    <h3>Select a test to download its details,also sending emails to students is only a click away!</h3>
    <p><p></p>
    <select style="text-align:center" class="form-control" id="SelectTest">
        <option>loading...</option>
    </select>
    <div class="alert alert-dismissible alert-warning" id="alert" hidden>
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <h4>Try Again!</h4>
        <p>Your Result Not Found</p>
    </div>
    <p><p><p></p>
    <button class="btn btn-primary btn-lg" id="submit">Submit</button>
</div>


<!-- Modal for the selected table data -->
<div class="modal fade" id="Modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Student Data</h4>
            </div>
            <div class="modal-body">
                @*<img id="imgLoading" src="~/Content/loading-gif-800x600.gif" hidden />*@
                <table class="table table-striped table-hover " id="ResultTable"></table>
               
            </div>
            <div class="modal-footer">
                <!--Download table data in Excel file-->
                <button type="button" class="btn btn-primary" data-dismiss="modal" id="btnDownloadExcel">Download</button>
                <!--To Open Sending Mail-->
                <button type="button" class="btn btn-success" data-dismiss="modal" id="btnSendMail">Send Mail</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal for the Sending Mail -->
<div class="modal fade" id="MailModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Write Your Subject and Body</h4>
            </div>
            <div class="modal-body">
                <input type="text" id="emailbody" placeholder="your body ...." required/>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal" id="Send">Send</button>
            </div>
        </div>

    </div>
</div>





