<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/BootstrapPaper/bootstrap.css" rel="stylesheet" />
    <link href="~/BootstrapPaper/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</head>
<body>  
    <div id="msg" style="color:black;font-size:22px;background-color:#FFFFFF"></div>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">TestBuddy</a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="/Recruiter/Performance">Performance <span class="sr-only">(current)</span></a></li>
                    <li><a href="/Recruiter/QuickStats" style="">QuickStats</a></li>
                    <li><a href="/Recruiter/StartTest">StartTest</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#" id="emaillayout"></a></li>
                    <li><a href="#" id="logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <script>
        $('#emaillayout').text(localStorage.getItem('emaillayout'));

        function updateemail() {
            $('#emaillayout').text(localStorage.getItem('emaillayout'));
        }
        $('#logout').click(function () {
            localStorage.clear();
            console.log('Successfully logged out!');
            $('#msg').append('Successfully logged out!');
            window.location.href = "/";
        });
    </script>

    <div>
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
