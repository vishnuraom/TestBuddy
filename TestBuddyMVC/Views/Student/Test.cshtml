<div id="test" hidden>
    <div id="hmm" class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h3 id="question"></h3>
        </div>
        <div class="col-2">Test finishes in <span id="time">05:00</span> minutes!</div>
    </div>

    <div class="row"><p></p></div>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-sm-6">
            <div class="radio">
                <input type="radio" name="radio" id="radio1">
                <label for="radio1">
                </label>
            </div>
            <div class="radio">
                <input type="radio" name="radio" id="radio2">
                <label for="radio2">
                </label>
            </div>
            <div class="radio">
                <input type="radio" name="radio" id="radio3">
                <label for="radio3">
                </label>
            </div>
            <div class="radio">
                <input type="radio" name="radio" id="radio4">
                <label for="radio4">
                </label>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-2"></div>

        <div class="col-md-2">
            <button id="prev" type="submit" class="btn btn-success">Previous Question</button>
        </div>

        <div class="col-md-2">
            <button id="next" class="btn btn-success" type="submit">Next Question</button>
        </div>

        <div class="col-md-2">
            <button id="end" class="btn btn-danger" type="submit">End Test</button>
        </div>
    </div>

</div>
<div class="row">
    <p id="resultxx" style="font-size:60px;margin:20px auto">    </p>


</div>
<p id="resultpass" style="font-size:60px">    </p>


