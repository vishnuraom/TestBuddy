
@{
    ViewBag.Title = "Student";
    Layout = "~/Views/Shared/_Bootv4Layout.cshtml";
}

<br />
<br />

@section scripts {

    <script src="~/Scripts/jquery.signalR-2.2.2.min.js" defer></script>
    <script src="~/signalr/hubs" defer></script>
    <script src="~/Scripts/localforage.min.js" defer></script>
    <script src="~/Scripts/test.js" defer></script>
    }

<div class="jumbotron">
    <div class="container">
        <h1 class="display-3" style="font-size:50px">TestBuddy -Getting Started.</h1>
        <p class="lead">1.Start a test when it is available.</p>
        <p class="lead">2.No need to refresh the page to check if test is available.</p>
        <p class="lead">3.Submit the test in time.</p>
    </div>
</div>
<br />

<div class="row" id="head2" hidden>

    <div class="col-1"></div>
    <div class="card w-75">
        <div class="card-body">
            <h4 class="card-title" id="testname"></h4>
            <p class="card-text" id="desc"></p>
            <button class="btn btn-primary" id="start">Start Test</button>
        </div>
    </div>
</div>


